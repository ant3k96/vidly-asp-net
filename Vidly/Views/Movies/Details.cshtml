@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Vidly.Models.Movie

<div class="text-body">
    <h1>@Model.Title</h1>
    <ul>
        <li>Genre: @Model.Genre!.Name</li>
        <li>Added on: @Model.CreatedOn.Day of @Model.CreatedOn.ToString("MMMM") in @Model.CreatedOn.Year</li>
        <li>Released: @Model.ReleaseDate?.Day of @Model.ReleaseDate?.ToString("MMMM") in @Model.ReleaseDate?.Year</li>
    </ul>
</div>
