@model Vidly.ViewModel.RandomMovieViewModel
@{
    ViewData["Title"] = "Random";
}

<div class="text-center">
    <h1 class="display-4">MovieView</h1>
    <p>RandomView</p>
    @{
        var className = Model.Customers.Count > 1 ? "popular" : null; 
    }
    <h2 class="@className">@Model.Movie.Title</h2>
    <p>Here are customers:</p> 
    <ul style="padding-left">
        @foreach(var customer in Model.Customers)
        {
            <li text-align = "left">@customer.Name</li>
        }
    </ul>
</div>
