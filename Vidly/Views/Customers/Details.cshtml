@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Vidly.Models.Customer
<div class="text-body">
    <h1 class="fw-light">@Model.Name</h1>
    <ul class="lead">
        <li>Membership type: @Model.MembershipType!.Name</li>
    @{
        if (Model.BirthDate is not null)
        {
                <li>Birthday date: @Model.BirthDate.Value.ToShortDateString()</li>
        }
    }
    </ul>
</div>
